#!/usr/bin/make -f
# -*- makefile -*-.
# This file written by Codelinsoft

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1


INSTALL_PROGRAM = install

CFLAGS = -g -Wall
ifeq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O2
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
	INSTALL_PROGRAM += -s
endif

build: 
	cmake -DCMAKE_INSTALL_PREFIX=/opt -DCMAKE_INSTALL_LIBDIR=/opt/lylibrary/lib
	$(MAKE) -j5
	touch build
	
     
clean:
	dh_testdir
	dh_testroot
	rm -f build 
	[ ! -f Makefile ] || $(MAKE) distclean
	dh_clean


install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_prep
	dh_installdirs

	$(MAKE) DESTDIR=$(CURDIR)/debian/lylibrary $(INSTALL_PROGRAM)
	cp -rv $(CURDIR)/lylibrary/images/logo4.png $(CURDIR)/debian/lylibrary/opt/lylibrary/
	cp -rv $(CURDIR)/lylibrary/installdb/install_db.sql $(CURDIR)/debian/lylibrary/opt/lylibrary/installdb/
	cp -rv $(CURDIR)/lylibrary/updatedb/update_db.sql $(CURDIR)/debian/lylibrary/opt/lylibrary/updatedb/
	cp -rv $(CURDIR)/lylibrary/lylibrary $(CURDIR)/debian/lylibrary/opt/lylibrary/
	cp -rv $(CURDIR)/lylibrary/desktop/lylibrary.desktop $(CURDIR)/debian/lylibrary/usr/share/applications/

# Build architecture-independent files here.
binary-indep: build install
	dh_testdir -i 
	dh_testroot -i
	dh_installchangelogs -i 
	dh_installdocs -i
	dh_compress -i
	dh_fixperms -i
	dh_installdeb -i
	dh_shlibdeps -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir -a
	dh_testroot -a
	dh_installchangelogs -a CHANGELOG
	dh_installdocs -a
	dh_installman -a
	dh_strip -a
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install 
